actor PsxBlueCard_Samsara : CustomInventory replaces BlueCard
{
	inventory.pickupmessage "$GOTBLUECARD"
	inventory.pickupsound "misc/k_pkup"
    +NOTDMATCH
    +DONTGIB
	states
	{
		Spawn:
			BKEY A 10
			BKEY B 10 bright
			loop
		Pickup:
			TNT1 A 1 A_GiveInventory("BlueCard")
			stop
	}
}

