	Pain.DoomDamageTypeStunner:
		SKEL L 2 A_ChangeFlag("NOPAIN",true)
		SKEL L 300 A_Pain
		TNT1 A 0 A_ChangeFlag("NOPAIN",false)
		Goto See
	Pain.MightyBoot:
