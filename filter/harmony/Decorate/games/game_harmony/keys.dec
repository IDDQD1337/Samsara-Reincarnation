actor GreenKeycard_Samsara : CustomInventory replaces BlueCard
{
	scale 0.30
	radius 20
	height 16
	inventory.pickupmessage "$GOTBLUECARD"
	inventory.pickupsound "misc/k_pkup"
    +NOTDMATCH
    +DONTGIB
	states
	{
		Spawn:
			BKEY A 6 bright
			TLMP A 6 bright
			BKEY B 6 bright
			TLMP B 6 bright
			loop
		Pickup:
			TNT1 A 1 A_GiveInventory("BlueCard")
			stop
	}
}

