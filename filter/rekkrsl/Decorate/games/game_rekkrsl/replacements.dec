Actor SamsaraHealPack2_REKKR2 replaces CommanderKeen 690
{
	RenderStyle Add
	Alpha 0.9
	Scale 0.75
	+FLOATBOB
	-COUNTKILL
	+LOOKALLAROUND
	states
	{
	Spawn:
		MED3 A 0
		TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraDecorate",32,0,0) == 1, "Nope")
	Spawn2:
		MED3 A 0 BRIGHT ACS_NamedExecuteAlways("SamsaraClientDecorate", 0, 4, 100, 90)
		MED3 A 5 BRIGHT A_Look
		loop
	See:
		MED3 A 5 BRIGHT A_JumpIfCloser(196, "ActivateTrap")
		Goto Spawn2
	ActivateTrap:
		TNT1 A 0 A_SpawnItemEx("TeleportFog",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION)
		TNT1 A 0 A_SpawnItemEx("REKKRHusk_Samsara",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION)
		TNT1 A -1
		stop
	Nope:
		TNT1 A 1 A_SpawnItemEx("REKKRHusk_Samsara",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION)
		stop
	}
}

