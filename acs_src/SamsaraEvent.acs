            sigilCounter = SamsaraGlobal[2] + SamsaraGlobal[3] + SamsaraGlobal[4] + SamsaraGlobal[5] + SamsaraGlobal[6];

            for (i = 0; i < SIGILCOUNT; i++)
            {
                if (SamsaraGlobal[GLOBAL_SIGILBASE + i + 1])
