Script "Q2HUDHPDown" Enter
{
	Int PNum = PlayerNumber();
	Int HP1,HP2;
	While(PNum == PlayerNumber())
	{
		HP1 = GetActorProperty(0,0);
		Delay(1);
		HP2 = GetActorProperty(0,0);
		If(HP2<HP1)
		{ GiveInventory("HUDHPDown",1); Delay(6); TakeInventory("HUDHPDown",1);}
	}
}
