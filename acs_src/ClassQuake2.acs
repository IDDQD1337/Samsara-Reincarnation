Script "Q2ETFRifleShake" (int type) Clientside
{
	int a;
	switch(type)
	{
		case 1:
			for(a = 0; a < 4; a++) { SetActorPitch(0, GetActorPitch(0) - a*12); Delay(1); }
			for(a = 3; a > 0; a--) { SetActorPitch(0, GetActorPitch(0) + a*12); Delay(1); }
			break;
		case 2:
			for(a = 3; a > 0; a--) { SetActorPitch(0, GetActorPitch(0) + a*12); Delay(1); }
			for(a = 0; a < 4; a++) { SetActorPitch(0, GetActorPitch(0) - a*12); Delay(1); }
			break;
	}
}