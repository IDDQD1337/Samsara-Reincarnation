Actor StrifeBloodSplatter
{
	Height 4
	Radius 2
	Speed 4
	Projectile
	-NOGRAVITY
	+CLIENTSIDEONLY
	+NOBLOCKMAP
	+THRUACTORS
	+FORCEXYBILLBOARD
	States
	{
	Spawn:
		SDIS LMNOPQ 3
		SDIS R 2
		Stop
	Death:
		TNT1 A 0 A_JumpIf(abs(z - floorz) <= 4,"HitFloor")
		TNT1 A 0 A_CheckCeiling("HitCeiling")
		Stop
	HitFloor:
		TNT1 A 0 ACS_NamedExecuteWithResult("StrifeSpawnDecal")
		Stop
	HitCeiling:
		TNT1 A 0 ACS_NamedExecuteWithResult("StrifeSpawnDecal",1)
		Stop
	}
}

Actor StrifeBloodDecalFloor
{
	Height 2
	Radius 4
	Scale 16.0
	Renderstyle Translucent
	Alpha 0.75
	+NOINTERACTION
	+MOVEWITHSECTOR
	+CLIENTSIDEONLY
	States
	{
		Spawn:
			TNT1 A 0
			TNT1 A 0 A_Jump(256,"Spawn1","Spawn2","Spawn3","Spawn4","Spawn5","Spawn6")
			Goto Spawn1
		Spawn1:
			SDIS L 0
			goto SpawnContinue
		Spawn2:
			SDIS M 0
			goto SpawnContinue
		Spawn3:
			SDIS N 0
			goto SpawnContinue
		Spawn4:
			SDIS O 0
			goto SpawnContinue
		Spawn5:
			SDIS P 0
			goto SpawnContinue
		Spawn6:
			SDIS Q 0
			goto SpawnContinue
		SpawnContinue:
			"####" "#" 350
			"####" "#" 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraClientDecorate", 13), "SpawnContinue")
			goto Fadeout
		Fadeout:
			"####" "#" 1 A_FadeOut(0.05)
			wait
		Remove:
			TNT1 A 1
			Stop
	}
}

