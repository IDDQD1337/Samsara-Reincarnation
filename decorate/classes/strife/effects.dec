actor DisintEffectSmall
{
	Scale 0.75
	Speed 0
	Damage 0
	Radius 1
	Height 1
	PROJECTILE
	+BRIGHT
	+MISSILE
	-SOLID
	+NOCLIP
	+NOGRAVITY
	+INVULNERABLE
	+CLIENTSIDEONLY
	+DOOMBOUNCE
	+DONTSPLASH
	-EXPLODEONWATER
	+CANBOUNCEWATER
	States
	{
	Spawn:
		DIST ABCDEF 3
		DIST GHIJ 2
		stop
	}
}

