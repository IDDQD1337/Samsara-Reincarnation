Actor RTCW_AlliedCrate : CustomInventory
{
	Inventory.PickupMessage "Allied equipment drop"
	Inventory.PickupSound "RTCW/WeaponPickup"
	+INVENTORY.ALWAYSPICKUP
	States
	{
		Spawn:
			RW00 A 5
			Loop
		Pickup:
			TNT1 A 0 A_GiveInventory("RTCW_Colt")
			TNT1 A 0 A_GiveInventory("RTCW_Pineapple")
			TNT1 A 0 A_GiveInventory("RTCW_Thompson")
			TNT1 A 0 A_GiveInventory("RTCW_Snooper")
			stop
	}
}
