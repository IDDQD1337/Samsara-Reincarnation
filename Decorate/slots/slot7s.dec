actor BFG10K : BFG9000 5013
{
	Weapon.SlotNumber 8
	Game Doom
	SpawnID 165
}

actor SamsaraSlotSevenSkulltagPickup : SamsaraSlotSevenPickup replaces BFG10K
{
	States
	{
	Spawn:
		TNT1 A 0
		TNT1 A 0 A_JumpIf(CallACS("SamsaraDecorate",24,0,0) == 1, "NoUlt")
		TNT1 A 0 A_JumpIf(CallACS("SamsaraDecorate", 29) == 1, "InstagibNope") // Prevents weapons from spawning in Instagib
		TNT1 A 1 A_JumpIf(CallACS("SamsaraDecorate", 1) == 1, "IWasDropped")
		Goto SpawnLoop

	IWasDropped:
		TNT1 A 0 A_SpawnItemEx("SamsaraSlotSevenSkulltagDrop",0,0,0,velx,vely,velz,0,SXF_ABSOLUTEMOMENTUM)
		Stop

	SpawnLoop:
		"----" A 35 bright ACS_NamedExecuteAlways("SamsaraClientClass", 0, 11)
		Loop

	Doomguy:    WBG2 A 35 A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	Doom64:     64BG Z 35 A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	DoomguyStr: WDEV A 35 A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	Chexguy:    CFUG B 35 A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	HexenClassic: H105 A 35 Bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	Caleb:      BLBP A 35 A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	Bitterman:  Q2WP A 35 A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	Unreal:     UN00 A 35 A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	RTCW:       RW98 A 35 A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop

	DoomFull:      WBG2 F 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	DoomStrFull:   WDEV C 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	ChexFull:      CFUG D 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	HexenClassicFull: HMS7 B 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	CalebFull:     CP7S B 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	Doom64Full:    64BG Q 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	BittermanFull: Q2WP C 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	RTCWFull:      RW98 C 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop

	DoomEmpty:      WBG2 E 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	DoomStrEmpty:   WDEV B 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	ChexEmpty:      CFUG C 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	HexenClassicEmpty: HMS7 A 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	CalebEmpty:     CP7S A 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	Doom64Empty:    64BG P 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	BittermanEmpty: Q2WP B 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop
	RTCWEmpty:      RW98 B 35 bright A_ChangeFlag("FLOATBOB", 0) Goto SpawnLoop

	Pickup:
		TNT1 A 0 A_JumpIfInventory("DoomguyClass", 1, "PickupSkulltag")
		TNT1 A 0 A_JumpIfInventory("ChexClass", 1, "PickupSkulltag")
		TNT1 A 0 A_JumpIfInventory("HexenClass", 1, "CheckHexen")
		TNT1 A 0 A_JumpIfInventory("CalebClass", 1, "PickupSkulltag")
		TNT1 A 0 A_JumpIfInventory("StrifeClass", 1, "CheckStrife")
		TNT1 A 0 A_JumpIfInventory("BittermanClass", 1, "PickupSkulltag")
		//TNT1 A 0 A_JumpIfInventory("CatacombClass", 1, "CheckCatacomb")
		TNT1 A 0 A_JumpIfInventory("UnrealClass", 1, "PickupSkulltag")
		TNT1 A 0 A_JumpIfInventory("RTCWClass", 1, "PickupSkulltag")
		TNT1 A 0 A_JumpIf((CallACS("SamsaraGiveWeapon", 7) & 3) == 1, "PickupSuccess")
		Goto PickupFailure
	PickupSkulltag:
		TNT1 A 0 A_JumpIf((CallACS("SamsaraGiveWeapon", 11) & 3) == 1, "PickupSuccess")
		Goto PickupFailure
	CheckHexen:
		TNT1 A 0 A_JumpIfInventory("HexenClassMode",2,2)
		TNT1 A 0 A_JumpIfInventory("HexenClassMode",1,"PickupSkulltag")
		TNT1 A 0 A_JumpIf((CallACS("SamsaraGiveWeapon", 7) & 3) == 1, "PickupSuccess")
		Goto PickupFailure
	}
}

actor SamsaraSlotSevenSkulltagDrop : SamsaraSlotSevenSkulltagPickup
{
	States
	{
	Spawn:
		TNT1 A 0
		Goto SpawnLoop
	Pickup:
		TNT1 A 0 A_JumpIfInventory("DoomguyClass", 1, "PickupSkulltag")
		TNT1 A 0 A_JumpIfInventory("ChexClass", 1, "PickupSkulltag")
		TNT1 A 0 A_JumpIfInventory("HexenClass", 1, "CheckHexen")
		TNT1 A 0 A_JumpIfInventory("CalebClass", 1, "PickupSkulltag")
		TNT1 A 0 A_JumpIfInventory("StrifeClass", 1, "CheckStrife")
		TNT1 A 0 A_JumpIfInventory("BittermanClass", 1, "PickupSkulltag")
		//TNT1 A 0 A_JumpIfInventory("CatacombClass", 1, "CheckCatacomb")
		TNT1 A 0 A_JumpIfInventory("UnrealClass", 1, "PickupSkulltag")
		TNT1 A 0 A_JumpIfInventory("RTCWClass", 1, "PickupSkulltag")
		TNT1 A 0 A_JumpIf((CallACS("SamsaraGiveWeapon", 7, 1) & 1) == 1, "PickupSuccess")
		Goto PickupFailure
	PickupSkulltag:
		TNT1 A 0 A_JumpIf((CallACS("SamsaraGiveWeapon", 11, 1) & 1) == 1, "PickupSuccess")
		Goto PickupFailure
	CheckHexen:
		TNT1 A 0 A_JumpIfInventory("HexenClassMode",2,2)
		TNT1 A 0 A_JumpIfInventory("HexenClassMode",1,"PickupSkulltag")
		TNT1 A 0 A_JumpIf((CallACS("SamsaraGiveWeapon", 7, 1) & 1) == 1, "PickupSuccess")
		Goto PickupFailure
	CheckStrife:
		TNT1 A 0 A_JumpIfInventory("StrifeGuyInStrife", 1, "StrifeCheck")
		TNT1 A 0 A_JumpIfInventory("GotWeapon7", 1, "StrifeCheck")
		TNT1 A 0 A_GiveInventory("StrifeSigilPiece",1)
		TNT1 A 0 A_GiveInventory(" Sigil ", 1)
		TNT1 A 0 A_TakeInventory("StrifeSigilPiecePreferred",5)
		TNT1 A 0 A_GiveInventory("StrifeSigilPiecePreferred", CallACS("StrifeSigilPreferred"))
		Goto StrifeCheck
	StrifeCheck:
		TNT1 A 0 A_JumpIf((CallACS("SamsaraGiveWeapon", 7, 1) & 1) == 1, "PickupSuccess")
		Goto PickupFailure
	CheckCatacomb:
		TNT1 A 0 A_JumpIfInventory("Catacomb_Hourglass", 1, 3)
		TNT1 A 0 A_GiveInventory("Catacomb_Hourglass", 1)
		TNT1 A 0 A_JumpIf((CallACS("SamsaraGiveWeapon", 7, 1) & 1) == 1, "PickupSuccess")
		Goto PickupFailure
		TNT1 A 0 A_TakeInventory("Catacomb_HourglassCooldown", 180)
		TNT1 A 0 A_JumpIf((CallACS("SamsaraGiveWeapon", 7, 1) & 1) == 1, "PickupSuccess")
		Goto PickupFailure
	}
}
