actor SamsaraSlotThreeNoStay : SamsaraSlotThreePickup
{
    States
    {
      Spawn:
        WEPG C 0 Bright
        goto SpawnGameModeCheck

      PickupDefault:
        TNT1 A 0 A_JumpIf((CallACS("SamsaraGiveWeapon", 4, 1) & 1) == 1, "PickupSuccess")
        goto PickupFailure

      PickupStrife:
        TNT1 A 0 A_JumpIfInventory("StrifeGuyInStrife",1,"PickupDefault")
        TNT1 A 0 A_JumpIfInventory("GotWeapon3",1,"PickupDefault")
        TNT1 A 0 A_GiveInventory("StrifeSigilPiece")
        TNT1 A 0 A_GiveInventory(" Sigil ")
        TNT1 A 0 A_TakeInventory("StrifeSigilPiecePreferred")
        TNT1 A 0 A_GiveInventory("StrifeSigilPiecePreferred",CallACS("StrifeSigilPreferred"))
        goto PickupDefault
    }
}

actor SamsaraSlotThreeDrop : SamsaraSlotThreeNoStay
{
    States
    {
      PickupDefault:
        TNT1 A 0 A_JumpIf((CallACS("SamsaraGiveWeapon", 4, 2) & 1) == 1, "PickupSuccess")
        goto PickupFailure

      PickupStrife:
        TNT1 A 0 A_JumpIfInventory("StrifeGuyInStrife",1,"PickupDefault")
        TNT1 A 0 A_JumpIfInventory("GotWeapon3",1,"PickupDefault")
        TNT1 A 0 A_GiveInventory("StrifeSigilPiece")
        TNT1 A 0 A_GiveInventory(" Sigil ")
        TNT1 A 0 A_TakeInventory("StrifeSigilPiecePreferred")
        TNT1 A 0 A_GiveInventory("StrifeSigilPiecePreferred",CallACS("StrifeSigilPreferred"))
        goto PickupDefault
    }
}

