actor SamsaraSlotPickup: CustomInventory
{
	+QUIET
	+DONTGIB //adding this flag, because weapons being crushed by doors is frickin stupid
	Inventory.PickupMessage ""
	States
	{
	Spawn:
		TNT1 A 0
		TNT1 A 0 A_JumpIf(CallACS("SamsaraDecorate", 29) == 1, "InstagibNope") // Prevents weapons from spawning in Instagib
		TNT1 A 1 A_JumpIf(CallACS("SamsaraDecorate", 1) == 1, "IWasDropped")
		TNT1 A 35 A_Jump(256, "SpawnLoop")
		Wait

	PickupSuccess:
		TNT1 A 0 A_ChangeFlag("FLOATBOB", 0)  // because you'll totally have floatbob as a player
		Stop

	PickupFailure:
		TNT1 A 0 A_ChangeFlag("FLOATBOB", 0)
		Fail

	Invisible:
		TNT1 A 35
		TNT1 A 0 A_Jump(255, "SpawnLoop")
		Loop

	InstagibNope:
	SkulltagNope:
		TNT1 A 0
		Stop
	}
}

