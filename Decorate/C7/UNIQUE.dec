Actor C7MineDMToken : Counter { Inventory.MaxAmount 20 }

actor C7ProxyMineAmmo : Ammo
{
    Inventory.Amount 5
    Inventory.MaxAmount 30
    Ammo.BackpackMaxAmount 60 // was 30
    Tag "Proximity Mines"
}

actor C7ProxyMinePickup : C7ProxyMineAmmo
{
    Inventory.PickupMessage "You got a package of Proximity Mines!" 
    Inventory.Amount 5
	Inventory.RestrictedTo "Corridor7Player"
    Ammo.BackpackAmount 1
    Inventory.Icon "7MN2A0"
    States
    {
      Spawn:
        7MN2 A -1
        Stop
    }
}

Actor C7ProxyMine
{
	Monster
	-COUNTKILL
	+NOBLOCKMAP
	+NOBLOCKMONST
	+DROPOFF
	+MOVEWITHSECTOR
	-SOLID	
	+VULNERABLE
	+THRUACTORS
	-SHOOTABLE	
	+FRIENDLY
	+NOTARGET
	+NOBLOOD
	Speed 0
	Mass 5000
	Health 1
	Radius 6
	Height 6
	MeleeRange 48
	States
	{
	Spawn:
		C7MN B 0 NoDelay A_PlaySound("C7MinePlace", CHAN_BODY)
		C7MN B 35
	Active:
		TNT1 A 0 A_CopyFriendliness(AAPTR_Master)
		TNT1 A 0 A_ChangeFlag("THRUACTORS",0)				
		TNT1 A 0 A_ChangeFlag("VULNERABLE",1)	
		TNT1 A 0 A_ChangeFlag("NOBLOCKMAP",0)
	ActiveLoop:		
		C7MN BCDEFGHA 2 A_LookEx (LOF_NOSOUNDCHECK, 0, 48)
		C7MN A 0 A_PlaySound("C7MineBeep")
		C7MN HGFEDC 2 A_LookEx (LOF_NOSOUNDCHECK, 0, 48)
		Loop
	See:
		C7MN I 2 A_Die
	Death:	
	    C7MN I 0 A_Playsound("C7/Explosion")
		C7MN I 2 BRIGHT A_CustomMissile("C7MineExplosion",0,0,0)
		C7MN J 2 BRIGHT A_SetShootable
		C7MN KLMN 2 BRIGHT
		C7MN O 1
		C7MN O 1 A_FadeOut (1.0 / 35.0)
		Wait
	}
}

