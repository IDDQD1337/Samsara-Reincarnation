actor C7MineExplosion
{
    Radius 1
    Height 1
    Speed 0
    Damage 0
    Projectile
    +FORCERADIUSDMG
    Decal Scorch
    DeathSound "C7/Explosion"
    Obituary "%o didn't see %k's proximity mine."
    States
    {
      Spawn:
        TNT1 A 1 A_Die
        Goto Death

      Death:
		TNT1 A 0 A_TransferPointer(AAPTR_Target,AAPTR_Default,AAPTR_Master,AAPTR_Target)
        TNT1 A 2 Bright A_Explode(128,160,0)
        Stop
    }
}

Actor C7MineExplosionDM : C7MineExplosion
{
    Radius 1
    Height 1
    Speed 0
    Damage 0
    Projectile
    +FORCERADIUSDMG
    Decal Scorch
    DeathSound "C7/Explosion"
    Obituary "%o didn't see %k's proximity mine."
	DamageType "Normal"
	States
	{
      Spawn:
        TNT1 A 1 A_Die
        Goto Death
		
		Death:
			TNT1 A 0 A_TransferPointer(AAPTR_Target,AAPTR_Default,AAPTR_Master,AAPTR_Target)
			TNT1 A 0 A_TakeFromTarget("C7MineDMToken",1)
			TNT1 A 2 Bright A_Explode(Random(40,64),120)
			Stop
	}
}	

