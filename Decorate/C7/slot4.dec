actor "AlienDualBlaster" : Corridor7WeaponBase
{
    Weapon.SelectionOrder 1600
    Weapon.SlotNumber 4
	Weapon.BobStyle InverseAlpha
	Weapon.BobRangeX 0.2
	Weapon.BobRangeY 0.2
	Weapon.BobSpeed 4.0	
    Inventory.PickUpSound "C7/AmmoPickup"
    Weapon.AmmoUse 1
    Weapon.AmmoGive 30
    Weapon.AmmoType "Clip"
	+WEAPON.ALT_AMMO_OPTIONAL
	+WEAPON.NOALERT
	-WEAPON.CHEATNOTWEAPON
	Weapon.AmmoType2 "C7ProxyMineAmmo"
	Weapon.AmmoUse2 1
	Weapon.AmmoGive2 0
    Inventory.PickupMessage "You got the Alien Dual-Blaster!"
    Obituary "%o was on the wrong side of %k's dual-blaster."
	Tag "Alien Dual Blaster"	
    Weapon.YAdjust 11
	Inventory.RestrictedTo "Corridor7Player"	
    States
    {
      Spawn:
        7DU2 A -1
        Loop
      Ready:
        C7DU A 1 A_WeaponReady
        loop
      Fire:
        C7DU AEFG 2
	  Hold:
        TNT1 A 0 A_JumpIfInventory("DMModeOn",1,"DMFire")	  	  
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"CoopFire")
        TNT1 A 0 A_PlayWeaponSound("C7/DualBlaster")
		TNT1 A 0 A_AlertMonsters
		C7DU C 0 BRIGHT A_FireBullets(3,3,-1,random(1,8),"BlankPuffBloodless", FBF_NORANDOM, 64)
		C7DU C 0 BRIGHT A_FireBullets(3,3,-1,random(1,8),"BlankPuffBloodless", FBF_NORANDOM, 256)
        C7DU C 3 BRIGHT A_FireBullets(3,3,1,Random(3,16),"BlankPuffC7",FBF_NORANDOM|FBF_USEAMMO)
        TNT1 A 0 A_PlayWeaponSound("C7/DualBlaster")
		C7DU C 0 BRIGHT A_FireBullets(3,3,-1,random(1,8),"BlankPuffBloodless", FBF_NORANDOM, 64)
		C7DU C 0 BRIGHT A_FireBullets(3,3,-1,random(1,8),"BlankPuffBloodless", FBF_NORANDOM, 256)
        C7DU D 3 BRIGHT A_FireBullets(3,3,1,Random(3,16),"BlankPuffC7",FBF_NORANDOM|FBF_USEAMMO)
        TNT1 A 0 A_Refire
        C7DU GFEA 2 A_ClearRefire
        Goto Ready
      CoopFire:
        TNT1 A 0 A_PlayWeaponSound("C7/DualBlaster")
		TNT1 A 0 A_AlertMonsters
		C7DU C 0 BRIGHT A_FireBullets(3,3,-1,random(1,8),"BlankPuffBloodlessCoop", FBF_NORANDOM, 64)
		C7DU C 0 BRIGHT A_FireBullets(3,3,-1,random(1,8),"BlankPuffBloodlessCoop", FBF_NORANDOM, 256)
        C7DU C 3 BRIGHT A_FireBullets(3,3,1,Random(3,16),"BlankPuffC7Coop",FBF_NORANDOM|FBF_USEAMMO)
        TNT1 A 0 A_PlayWeaponSound("C7/DualBlaster")
		C7DU C 0 BRIGHT A_FireBullets(3,3,-1,random(1,8),"BlankPuffBloodlessCoop", FBF_NORANDOM, 64)
		C7DU C 0 BRIGHT A_FireBullets(3,3,-1,random(1,8),"BlankPuffBloodlessCoop", FBF_NORANDOM, 256)
        C7DU D 3 BRIGHT A_FireBullets(3,3,1,Random(3,16),"BlankPuffC7Coop",FBF_NORANDOM|FBF_USEAMMO)
        TNT1 A 0 A_Refire
        C7DU GFEA 2 A_ClearRefire
        Goto Ready
	 DMFire:
        TNT1 A 0 A_PlayWeaponSound("C7/DualBlaster")
		TNT1 A 0 A_AlertMonsters
		C7DU C 0 BRIGHT A_FireBullets(3,3,-1,random(1,9),"BlankPuffBloodless", FBF_NORANDOM, 64)
		C7DU C 0 BRIGHT A_FireBullets(3,3,-1,random(3,8),"BlankPuffBloodless", FBF_NORANDOM, 256)
        C7DU C 3 BRIGHT A_FireBullets(3,3,1,Random(3,16),"BlankPuffC7",FBF_NORANDOM|FBF_USEAMMO)
        TNT1 A 0 A_PlayWeaponSound("C7/DualBlaster")
		C7DU C 0 BRIGHT A_FireBullets(3,3,-1,random(1,9),"BlankPuffBloodless", FBF_NORANDOM, 64)
		C7DU C 0 BRIGHT A_FireBullets(3,3,-1,random(3,8),"BlankPuffBloodless", FBF_NORANDOM, 256)
        C7DU D 3 BRIGHT A_FireBullets(3,3,1,Random(3,16),"BlankPuffC7",FBF_NORANDOM|FBF_USEAMMO)
        TNT1 A 0 A_Refire
        C7DU GFEA 2 A_ClearRefire
        Goto Ready			
    }
} 
