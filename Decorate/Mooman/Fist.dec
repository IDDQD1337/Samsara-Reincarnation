Actor PGSuperTazer : PGBoolean {}
Actor PGUltraTazer : PGBoolean {}
Actor " Tazer " : Weapon
{
	Weapon.Slotnumber 0
	Weapon.SelectionOrder 4000
	Weapon.BobStyle Inverse
	Weapon.BobSpeed 0.58
	Weapon.BobRangeX 1.1
	Weapon.BobRangeY 0.1	
	+WEAPON.MELEEWEAPON
	+WEAPON.WIMPY_WEAPON
	+WEAPON.NOALERT
	+INVENTORY.UNDROPPABLE
	Obituary "$SAMSARA_GREED_OB_SLOT_FISTS"
    Inventory.RestrictedTo "POGreedPlayer"	 		
	states
	{
	Spawn:
		TNT1 A 5
		stop
	Select:
		TNT1 AAA 0 A_Raise
		GWF1 A 1 A_Raise
		Loop
	Deselect:
		TNT1 AAA 0 A_Lower
		GWF1 A 1 A_Lower
		Loop
	Ready:
		TNT1 A 0 A_JumpIfInventory("PGUltraTazer",1,"ReadySuper")
		GWF1 A 1 A_WeaponReady
		loop
	ReadySuper:
		GWF1 A 1 A_WeaponReady
		goto Ready
	Fire:
		GWF1 B 2 bright A_PlayWeaponSound("greed/tazer")
		GWF1 C 3 bright A_CustomPunch(20,1,8,"PGBulletPuff", 70) //CPF_NORANDOMPUFFZ  -> ZANDRO>>>>>>>>>>>>>
		GWF1 A 10
		goto Ready
	}
}