Actor Q3BattleSuit : CustomInventory
{
	Inventory.PickupMessage "Battlesuit"
	+INVENTORY.AUTOACTIVATE
	+FLOATBOB
	+BRIGHT
	Renderstyle Add
	States
	{
		Spawn:
			Q300 ABCDEF 15
			Q300 G 0
			Loop
		Pickup:
			TNT1 A 0 A_GiveInventory("Q3BattleSuitProtection",1)
			TNT1 A 0 A_PlaySound("Quake3/Items/BioSuit",CHAN_6)
			Stop
	}
}

Actor Q3BattleSuitProtection : PowerProtection { Powerup.Duration -30 Powerup.Color "Gold" DamageFactor "Normal", 0.5 }

Actor Q3BattleSuitGlowToken : CustomInventory
{
	+INVENTORY.AUTOACTIVATE
	States
	{
		Pickup:
			TNT1 A 0 A_SpawnItemEx("Q3BattleSuitGlow",0,0,40)
			Stop
	}
}

Actor Q3BattleSuitGlow
{
	+NOGRAVITY
	States
	{
		Spawn:
