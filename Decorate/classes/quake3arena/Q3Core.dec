Actor Q3BulletDecalFloor
{
	Height 2
	Radius 4
	Scale 8.0
	Renderstyle Shaded
	StencilColor "Black"
	+NOINTERACTION
	+MOVEWITHSECTOR
	+CLIENTSIDEONLY
	States
	{
		Spawn:
			Q300 A 0 NoDelay A_JumpIf(CallACS("IsThisSky") == 1, "Remove")
			Q300 A 350
			Q300 A 1 A_FadeOut(0.05)
			wait

		Remove:
			TNT1 A 1
			stop
	}
}

