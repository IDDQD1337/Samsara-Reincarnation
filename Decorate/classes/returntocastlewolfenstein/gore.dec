Actor RTCW_BloodSpot
{
	+NOINTERACTION
	+CLIENTSIDEONLY
	Renderstyle Translucent
	Radius 2
	Height 4
	States
	{
		Spawn:
			TNT1 A 0
			TNT1 A 0 A_SetAngle(random(0,360))
			TNT1 A 0 A_Jump(256,"Spawn1","Spawn2","Spawn3")
		Spawn1:
			RW00 A 300
			TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraDecorate",31) == 1, "Spawn1")
			RW00 A 2 A_FadeOut(0.05)
			Wait
		Spawn2:
			RW00 B 300
			TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraDecorate",31) == 1, "Spawn2")
			RW00 B 2 A_FadeOut(0.05)
			Wait
		Spawn3:
			RW00 C 300
			TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraDecorate",31) == 1, "Spawn3")
			RW00 C 2 A_FadeOut(0.05)
			Wait
	}
}

