Actor RTCW_Gib
{
	Height 2
	Radius 2
	Speed 2
	Gravity 0.5
	Damage (0)
	Projectile
	BounceType "Doom"
	Bouncecount 2
	Bouncesound ""
	-NOGRAVITY
	+BLOODLESSIMPACT
	+THRUACTORS
	+MOVEWITHSECTOR
	+USEBOUNCESTATE
	+CLIENTSIDEONLY
	States
	{
		Spawn:
			RW00 A 0 NoDelay A_SpawnItemEx("RTCW_BloodCloud",0,0,0,0,0,0,0,SXF_TRANSFERTRANSLATION)
			RW00 A 0 A_SpawnItemEx("RTCW_BloodTrail",0,0,frandom(-0.5,0.5),frandom(-0.5,0.5),frandom(0.05,0.25),0,SXF_NOCHECKPOSITION|SXF_USEBLOODCOLOR|SXF_ABSOLUTEVELOCITY)
		SpawnLoop:
			RW00 A 2 A_SetPitch(pitch+2.5)
			Loop
		Death:
			RW00 A 0 A_CheckFloor("SplatSurface")
		Death2:
			RW00 A 100
			TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraDecorate",31) == 1, "Death2")
			RW00 AAAAAAAA 1 A_FadeOut(0.1)
			Stop
		Bounce.Floor:
			RW00 A 0 A_SpawnItemEx("RTCW_BloodSpot",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION|SXF_TRANSFERTRANSLATION,128)
			Goto SpawnLoop
		SplatSurface:
			RW00 A 0 A_SpawnItemEx("RTCW_BloodSpot",0,0,0,0,0,0,0,SXF_NOCHECKPOSITION|SXF_TRANSFERTRANSLATION,128)
			Goto Death+1
	}
}

