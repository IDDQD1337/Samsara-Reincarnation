actor EradDartGunCounter : TemporaryCounter { Inventory.MaxAmount 2 }

actor "  Dart Cannon  " : SamsaraEradicatorWeapon
{
    Inventory.PickupMessage "Death Dart"
    Weapon.SlotNumber 4
    Weapon.SelectionOrder 1300
    Weapon.AmmoType1 "Clip"
    Weapon.AmmoType2 "Clip"
    Weapon.AmmoGive 18
    Weapon.AmmoUse1 1
    Weapon.AmmoUse2 1
    Obituary "%o was pierced by %k's death darts."
    Tag "Dart Cannon"
    States
    {
      Spawn:
        DZ8P A -1
        stop

      Ready:
        TNT1 A 0 A_JumpIfInventory("EleenaReady",1,"IntroTaunt")
      ReadyStart:
        ELDC A 1 A_WeaponReady
        goto Ready

      Deselect:
        TNT1 A 0 A_JumpIfHealthLower(1,"DeselectInstant")
        TNT1 A 0 A_PlaySound("Erad/wepswitch")
      DeselectLoop:
        TNT1 A 0 A_Lower
        ELDC A 1 A_Lower
        loop

      Select:
        TNT1 A 0 A_Raise
        ELDC A 1 A_Raise
        loop

      Fire:
		TNT1 A 0 A_JumpIfInventory("PowerEradEnWP",1,"FireAlt")
        TNT1 A 0 A_JumpIfInventory("SamsaraHasPermaWeaponLevel2",1,"FireAlt")
        TNT1 A 0 A_GunFlash
        ELDC A 3 Bright ACS_NamedExecuteWithResult("EradicatorDartGun", 0)
        ELDC A 2 Offset(-5,36)
        ELDC A 1 Offset(5,37)
        TNT1 A 0 A_ReFire
        ELDC A 1 Offset(4,34)
        goto Ready

      FireAlt:
        TNT1 A 0 A_GunFlash
        ELDC A 3 Bright ACS_NamedExecuteWithResult("EradicatorDartGun", 1)
        ELDC A 1 Offset(-5,36)
		ELDC A 1 Offset(5,37)
        TNT1 A 0 A_JumpIfInventory("PowerEradEnWP",1,3)
        TNT1 A 0 A_JumpIfInventory("SamsaraHasPermaWeaponLevel2",1,2)
        TNT1 A 0 A_CheckReload
        goto AltFireFinish
        TNT1 A 0 A_ReFire
        goto AltFireFinish

      AltFireFinish:
        ELDC A 1 Offset(4,34)
        goto Ready

      Flash:
        ELDC B 3 Bright A_Light1
        goto LightDone

      IntroTaunt:
        TNT1 A 0 A_GiveInventory("EleenaIntroTaunt")
        goto ReadyStart
    }
}

actor SamsaraEradicatorDeathDartPrimaryAttackHandler : Trigger
{
    States
    {
      // Ammo checking/taking stuff
      Pickup:
		TNT1 A 0 A_JumpIfInventory("EradDartGunCounter",1,"PickupAttack")
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"PickupAttack")
        TNT1 A 0 A_JumpIfInventory("Clip",1,1)
        stop
        TNT1 A 0 A_TakeInventory("Clip",1)
        goto PickupAttack

      // Attack stuff
      PickupAttack:
        TNT1 A 0 A_JumpIfInventory("SPModeOn",1,"PickupAttackCoop")
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"PickupAttackCoop")
      PickupAttackDM:
		TNT1 A 0 A_JumpIfInventory("EradDartGunCounter",2,"AttackDM3")
		TNT1 A 0 A_JumpIfInventory("EradDartGunCounter",1,"AttackDM2")
		TNT1 A 0 A_PlaySound("eleena/dartfire",CHAN_WEAPON)
		TNT1 A 0 A_FireCustomMissile("ImpalingDart",frandom(0,1.0),false,-6,0,0,frandom(-1.0,1.0))
		TNT1 A 0 A_GiveInventory("EradDartGunCounter")
	    stop
	  AttackDM2:
		TNT1 A 0 A_FireCustomMissile("ImpalingDart",frandom(-0.5,0.5),false,0,0,0,frandom(-1.0,1.0))
		TNT1 A 0 A_GiveInventory("EradDartGunCounter")
		stop
	  AttackDM3:
        TNT1 A 0 A_FireCustomMissile("ImpalingDart",frandom(-1.0,0),false,6,0,0,frandom(-1.0,1.0))
		TNT1 A 0 A_TakeInventory("EradDartGunCounter")
        stop

      PickupAttackCoop:
	    TNT1 A 0 A_JumpIfInventory("EradDartGunCounter",2,"AttackCoop3")
		TNT1 A 0 A_JumpIfInventory("EradDartGunCounter",1,"AttackCoop2")
		TNT1 A 0 A_PlaySound("eleena/dartfire",CHAN_WEAPON)
		TNT1 A 0 A_FireCustomMissile("CoopImpalingDart",frandom(0,1.0),false,-6,0,0,frandom(-1.0,1.0))
		TNT1 A 0 A_GiveInventory("EradDartGunCounter")
		stop
	  AttackCoop2:
		TNT1 A 0 A_FireCustomMissile("CoopImpalingDart",frandom(-0.5,0.5),false,0,0,0,frandom(-1.0,1.0))
		TNT1 A 0 A_GiveInventory("EradDartGunCounter")
		stop
	  AttackCoop3:
        TNT1 A 0 A_FireCustomMissile("CoopImpalingDart",frandom(-1.0,0),false,6,0,0,frandom(-1.0,1.0))
		TNT1 A 0 A_TakeInventory("EradDartGunCounter")
        stop
    }
}

