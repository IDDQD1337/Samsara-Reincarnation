actor ImpalingDart
{
    Projectile
    Radius 3
    Height 3
    Speed 40
    Damage (7)
    DamageType "EradPiercingDart"
    Obituary "%o was pierced by %k's death darts."
	Scale 0.5
    +BLOODSPLATTER
    +PIERCEARMOR
    +THRUGHOST
    +WINDTHRUST
    States
    {
      Spawn:
        DS95 J -1
        stop

      Death:
        DS95 J 6 A_PlaySound("Dart/PierceWall",CHAN_VOICE)
        stop

      XDeath:
      Crash:
        TNT1 A 1
        stop
    }
}

actor CoopImpalingDart : ImpalingDart
{
    Species "Player"
    +THRUSPECIES
}
