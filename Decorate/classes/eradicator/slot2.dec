}

actor SonicPuff : BulletPuffSettingless
{
    DamageType "EradShock"
    RenderStyle "Translucent"
    Scale 0.5
	VSpeed 0.25
	Alpha 0.5
    -ALLOWPARTICLES
    +NOEXTREMEDEATH
    +PUFFONACTORS
    States
    {
      Spawn:
      Crash:
        EVA6 ABCDEFG 4
        EVA6 H 4 A_FadeOut
        stop

      Melee:
      XDeath:
        TNT1 A 1
        stop
    }
}

actor SonicPuffCoop : SonicPuff { +MTHRUSPECIES }
