actor "  Sonic Shock  " : SamsaraEradicatorWeapon
{
    Inventory.PickupMessage "Sonic Shock"
    Weapon.SlotNumber 2
    Weapon.SelectionOrder 1500
    Weapon.AmmoType1 "Shell"
    Weapon.AmmoType2 "Shell"
    Weapon.AmmoGive 8
    Weapon.AmmoUse1 1
    Weapon.AmmoUse2 1
    Obituary "%o was vaporized by %k's sonic force."
    Tag "Sonic Shock"
    States
    {
      Spawn:
        SSPU A -1
        stop

      Ready:
        TNT1 A 0 A_JumpIfInventory("EleenaReady",1,"IntroTaunt")
      ReadyStart:
        ESHK A 1 A_WeaponReady
        goto Ready

      Deselect:
        TNT1 A 0 A_JumpIfHealthLower(1,"DeselectInstant")
        TNT1 A 0 A_PlaySound("Erad/wepswitch")
      DeselectLoop:
        TNT1 A 0 A_Lower
        ESHK A 1 A_Lower
        loop

      Select:
        TNT1 A 0 A_Raise
        ESHK A 1 A_Raise
        loop

      Fire:
		TNT1 A 0 A_JumpIfInventory("PowerEradEnWP",1,"FireAlt")
        TNT1 A 0 A_JumpIfInventory("SamsaraHasPermaWeaponLevel2",1,"FireAlt")
        TNT1 A 0 A_GunFlash
        ESHK A 2 Bright A_GiveInventory("SamsaraEradicatorSonicShockPrimaryAttackHandler")
        ESHK A 1 Bright Offset(3,36)
        ESHK A 1 Offset(10,61)
        ESHK A 1 Offset(12,69)
        ESHK A 1 Offset(11,77)
        ESHK A 1 Offset(10,73)
        ESHK A 1 Offset(9,70)
        ESHK A 1 Offset(8,68)
        ESHK A 1 Offset(7,65)
        ESHK A 1 Offset(6,63)
        ESHK A 1 Offset(5,59)
        ESHK A 1 Offset(4,54)
        ESHK A 1 Offset(3,47)
        ESHK A 1 Offset(2,41)
        ESHK A 1 Offset(1,37)
        ESHK A 12 Offset(0,32)
        ESHK A 1 A_ReFire
        goto Ready

      FireAlt:
        TNT1 A 0 A_GunFlash
        ESHK A 2 Bright A_GiveInventory("SamsaraEradicatorSonicShockSecondaryAttackHandler")
        ESHK A 1 Bright Offset(3,36)
        ESHK A 1 Offset(10,61)
        ESHK A 1 Offset(12,69)
        ESHK A 1 Offset(11,77)
        ESHK A 1 Offset(10,73)
        ESHK A 1 Offset(9,70)
        ESHK A 1 Offset(8,68)
        ESHK A 1 Offset(7,65)
        ESHK A 1 Offset(6,63)
        ESHK A 1 Offset(5,59)
        ESHK A 1 Offset(4,54)
        ESHK A 1 Offset(3,47)
        ESHK A 1 Offset(2,41)
        ESHK A 1 Offset(1,37)
        ESHK A 2 Offset(0,32)
        TNT1 A 0 A_JumpIfInventory("PowerEradEnWP",1,3)
        TNT1 A 0 A_JumpIfInventory("SamsaraHasPermaWeaponLevel2",1,2)
        TNT1 A 0 A_CheckReload
        goto AltFireFinish
        TNT1 A 0 A_ReFire
        goto AltFireFinish

      AltFireFinish:
        ESHK A 1
        goto Ready

      Flash:
        ESHK B 1 Bright A_Light1
        ESHK B 2 Bright A_Light2
        goto LightDone

      IntroTaunt:
        TNT1 A 0 A_GiveInventory("EleenaIntroTaunt")
        goto ReadyStart
    }
}

actor SamsaraEradicatorSonicShockPrimaryAttackHandler : Trigger
{
    States
    {
      // Ammo checking/taking stuff
      Pickup:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"PickupAttack")
        TNT1 A 0 A_JumpIfInventory("Shell",1,1)
        stop
        TNT1 A 0 A_TakeInventory("Shell",1)
        goto PickupAttack

      // Attack stuff
      PickupAttack:
		TNT1 A 0 A_SpawnItemEx("SonicPuff",6,0,38,0,0,1)
        TNT1 A 0 A_PlaySound("sonic/shock",CHAN_WEAPON)
        TNT1 A 0 A_JumpIfInventory("SPModeOn",1,"PickupAttackCoop")
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"PickupAttackCoop")
      PickupAttackDM:
        TNT1 A 0 A_FireBullets(3,3,6,random(9,12),"SonicPuff",FBF_NORANDOM|FBF_NOFLASH)
        goto PickupFinish

      PickupAttackCoop:
        TNT1 A 0 A_FireBullets(3,3,6,random(9,12),"SonicPuffCoop",FBF_NORANDOM|FBF_NOFLASH)
        goto PickupFinish

      // Finishing stuff
      PickupFinish:
        TNT1 A 0 A_Recoil(2)
        stop
    }
}

actor SamsaraEradicatorSonicShockSecondaryAttackHandler : Trigger
{
    States
    {
      // Ammo checking/taking stuff
      Pickup:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"PickupAttack")
        TNT1 A 0 A_JumpIfInventory("Shell",1,1)
        stop
        TNT1 A 0 A_TakeInventory("Shell",1)
