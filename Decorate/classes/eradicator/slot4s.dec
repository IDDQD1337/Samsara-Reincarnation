//Belongs to Eleena
actor "EradEnergywhip" : SamsaraEradicatorWeapon
{
    Inventory.PickupMessage "Energywhip"
    Weapon.SlotNumber 4
    Weapon.SelectionOrder 900
    Weapon.AmmoType1 "Clip"
    Weapon.AmmoType2 "Clip"
    Weapon.AmmoGive 30
    Weapon.AmmoUse1 1
    Weapon.AmmoUse2 2
    Obituary "%o was electrocuted by %k's Energywhip."
    Tag "Energywhip"
    States
    {
      Spawn:
        ER11 DEFGH -1
        stop

      Ready:
		TNT1 A 0 A_StopSound(CHAN_WEAPON)
        TNT1 A 0 A_JumpIfInventory("EleenaReady",1,"IntroTaunt")
      ReadyStart:
        TNT1 A 0 A_JumpIfInventory("PowerEradEnWP",1,3)
        TNT1 A 0 A_JumpIfInventory("SamsaraHasPermaWeaponLevel2",1,2)
        ER09 A 1 A_WeaponReady(WRF_NOSECONDARY)
        goto Ready
        ER09 A 1 A_WeaponReady
        goto Ready

      Deselect:
		TNT1 A 0 A_StopSound(CHAN_WEAPON)
        TNT1 A 0 A_JumpIfHealthLower(1,"DeselectInstant")
        TNT1 A 0 A_PlaySound("Erad/wepswitch")
      DeselectLoop:
        TNT1 A 0 A_Lower
        ER09 A 1 A_Lower
        loop

      Select:
        TNT1 A 0 A_Raise
        ER09 A 1 A_Raise
        loop

      Fire:
        TNT1 A 0 A_GunFlash
        ER09 A 1 Bright Offset(0,34) A_GiveInventory("SamsaraEradicatorEnergyWhipPrimaryAttackHandler")
        ER09 A 1 Offset(0,36)
		ER09 A 0 A_Refire("FireLoop")
		Goto FireEnd
	  FireLoop:
		ER09 A 0 A_GunFlash
		ER09 A 2 Bright Offset(0,38) A_GiveInventory("SamsaraEradicatorEnergyWhipPrimaryAttackHandler")
		ER09 A 0 A_Refire("FireLoop")
	  FireEnd:
        ER09 A 1 Offset(0,36)
		ER09 A 1 Offset(0,34)
        goto Ready

      AltFire:
        TNT1 A 0 A_GunFlash
        ER09 A 1 Bright Offset(0,34) A_GiveInventory("SamsaraEradicatorEnergyWhipSecondaryAttackHandler")
        ER09 A 1 Offset(0,36)
		ER09 A 0 A_Refire("AltFireLoop")
		Goto FireEnd
	  AltFireLoop:
		ER09 A 0 A_GunFlash
		ER09 A 2 Bright Offset(0,38) A_GiveInventory("SamsaraEradicatorEnergyWhipSecondaryAttackHandler")
		ER09 A 0 A_Refire("AltFireLoop")
	  AltFireEnd:
        ER09 A 1 Offset(0,36)
		ER09 A 1 Offset(0,34)
        goto Ready

      Flash:
        ER09 BC 1 Bright A_Light1
        goto LightDone

      IntroTaunt:
        TNT1 A 0 A_GiveInventory("EleenaIntroTaunt")
        goto ReadyStart
    }
}

actor SamsaraEradicatorEnergyWhipPrimaryAttackHandler : Trigger
{
    States
    {
      // Ammo checking/taking stuff
      Pickup:
		TNT1 A 0 A_JumpIfInventory("EradDartGunCounter",1,"PickupAttack")
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"PickupAttack")
        TNT1 A 0 A_JumpIfInventory("Clip",1,1)
        stop
        TNT1 A 0 A_TakeInventory("Clip",1)
        goto PickupAttack

      // Attack stuff
      PickupAttack:
		TNT1 A 0 A_PlaySound("Bolt/Spark1",CHAN_WEAPON,1.0,true)
        TNT1 A 0 A_JumpIfInventory("SPModeOn",1,"PickupAttackCoop")
        TNT1 A 0 A_JumpIfInventory("CoopModeOn",1,"PickupAttackCoop")
      PickupAttackDM:
		TNT1 A 0 A_FireCustomMissile("EradEnergyWhipBolt",0,false,0,0,0,frandom(-1.0,1.0))
	    stop

      PickupAttackCoop:
		TNT1 A 0 A_FireCustomMissile("EradEnergyWhipBoltCoop",0,false,0,0,0,frandom(-1.0,1.0))
		stop
    }
}

