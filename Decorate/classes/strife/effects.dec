	States
	{
	Spawn:
		THIT ABC 6
		THIT DE 4
		stop
	}
}

actor DisintEffectRoundTiny : DisintEffectRound { Scale 0.35 }

actor DisintEffectRoundHuge : DisintEffectRound
{
