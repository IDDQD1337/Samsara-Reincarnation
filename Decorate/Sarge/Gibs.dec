Actor Q3_BloodGenerator : CustomInventory
{
	-COUNTITEM
	+INVENTORY.ALWAYSPICKUP
	Inventory.PickupMessage ""
	Inventory.PickupSound ""
	States
	{
		Pickup:
			TNT1 A 0
			TNT1 A 0 A_CheckFlag("NOBLOOD",3)
			TNT1 A 0 A_SpawnItemEx("Switchable_FlyingBlood",(radius-16)*cos(CallACS("Q3_BloodGenerator_Return",1)),(radius-16)*sin(CallACS("Q3_BloodGenerator_Return",1)),CallACS("Q3_BloodGenerator_Return",2),random(-350,350)/100.00,random(-350,350)/100.00,random(500,1000)/100.00,random(-180,180),SXF_NOCHECKPOSITION|SXF_USEBLOODCOLOR|SXF_ABSOLUTEPOSITION)	
			TNT1 A 0 A_SpawnItemEx("Q3BloodSpray",(radius-16)*cos(CallACS("Q3_BloodGenerator_Return",1)),(radius-16)*sin(CallACS("Q3_BloodGenerator_Return",1)),CallACS("Q3_BloodGenerator_Return",2),frandom(0.25,0.5)*sin(CallACS("Q3_BloodGenerator_Return",3)),frandom(-0.5,0.5)*cos(CallACS("Q3_BloodGenerator_Return",3)),frandom(0.05,0.25),0,SXF_NOCHECKPOSITION|SXF_USEBLOODCOLOR|SXF_ABSOLUTEPOSITION|SXF_ABSOLUTEVELOCITY)
			TNT1 A 0
			stop
	}
}

