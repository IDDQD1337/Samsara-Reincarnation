Actor Q3BloodDecalFloor
{
	Height 2
	Radius 4
	Scale 32.0
	Renderstyle Translucent
	+NOINTERACTION
	+NOGRAVITY
	+MOVEWITHSECTOR
	States
	{
		Spawn:
			Q300 A 0 NoDelay A_JumpIf(CallACS("IsThisSky")==1,"Remove")
			Q300 A 350
			TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraDecorate",31) == 1, "Spawn2")
			goto Fadeout
		Spawn2:
			Q300 A 350
			TNT1 A 0 A_JumpIf(ACS_NamedExecuteWithResult("SamsaraDecorate",31) == 1, "Spawn2")
			goto Fadeout
		Fadeout:
			Q300 A 1 A_Fadeout(0.05)
			wait
		Remove:
			TNT1 A 1
			Stop
	}
}

