			TNT1 A 2 A_Explode(CallACS("DeusEx_WeaponSkillDamage", 5, 160), 480, 0)
			TNT1 A 2 A_Explode(CallACS("DeusEx_WeaponSkillDamage", 5, 160), 600, 0)
