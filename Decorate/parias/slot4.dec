actor SamsaraHexenSerpentStaffBlinkCounter : Counter {}
actor SamsaraHexenSerpentStaffDrained : Boolean {}
actor SamsaraHexenJotunnsFlailMeleePuffSpawned : Boolean {}
actor SamsaraHexenJotunnsFlailMeleeAmmoTaken : Boolean {} // for spread rune

actor "Serpent Staff" : SamsaraHexenWeapon
{
    Inventory.PickupMessage "Serpent Staff"
    Weapon.SlotNumber 4
    Weapon.SelectionOrder 1600
    Weapon.YAdjust 10
    Weapon.AmmoType "Clip"
    Weapon.AmmoGive 25
    Weapon.AmmoUse 1
    Obituary "$SAMSARA_HEXEN_OB_SLOT4_1"
    Tag "Serpent Staff"
    +AMMO_OPTIONAL
    +NOALERT
    States
    {
      Spawn:
        WCSS A -1
        stop

      // Parias
      Ready:
        TNT1 A 0 A_TakeInventory("SamsaraHexenSerpentStaffBlinkCounter") // reset
        TNT1 A 0 A_GiveInventory("SamsaraHexenSerpentStaffBlinkCounter",random(20,147))
        TNT1 A 0 A_JumpIfInventory("HexenClassMode",2,"ReadyLoopFighter")
        TNT1 A 0 A_JumpIfInventory("HexenClassMode",1,"ReadyLoopMage")
      ReadyCleric:
        CSSF C 4
        CSSF B 3
      ReadyLoop:
        TNT1 A 0 A_JumpIfInventory("HexenClassMode",2,"ReadyLoopFighter")
        TNT1 A 0 A_JumpIfInventory("HexenClassMode",1,"ReadyLoopMage")
      ReadyLoopCleric:
        CSSF AAAAAAA 1 A_WeaponReady
        TNT1 A 0 A_TakeInventory("SamsaraHexenSerpentStaffBlinkCounter",1)
        TNT1 A 0 A_JumpIfInventory("SamsaraHexenSerpentStaffBlinkCounter",1,1)
        goto ReadyLoopClericBlink
        CSSF A 1 A_WeaponReady
        goto ReadyLoop

      ReadyLoopClericBlink:
        TNT1 A 0 A_GiveInventory("SamsaraHexenSerpentStaffBlinkCounter",random(12,76))
        CSSF BBBCCCCCBBB 1 A_WeaponReady
        goto ReadyLoop

      Deselect:
        TNT1 A 0 A_JumpIfInventory("HexenClassMode",2,"DeselectLoopFighter")
        TNT1 A 0 A_JumpIfInventory("HexenClassMode",1,"DeselectLoopMage")
      DeselectCleric:
        CSSF B 3
        CSSF C 4
      DeselectLoop:
        TNT1 A 0 A_JumpIfInventory("HexenClassMode",2,"DeselectLoopFighter")
        TNT1 A 0 A_JumpIfInventory("HexenClassMode",1,"DeselectLoopMage")
      DeselectLoopCleric:
        CSSF C 1 A_Lower
        goto DeselectLoop

      Select:
        TNT1 A 0 A_JumpIfInventory("HexenClassMode",2,"SelectFighter")
        TNT1 A 0 A_JumpIfInventory("HexenClassMode",1,"SelectMage")
      SelectCleric:
        CSSF C 1 A_Raise
        goto Select

      Fire:
        TNT1 A 0 A_JumpIfInventory("HexenClassMode",2,"FireFighter")
        TNT1 A 0 A_JumpIfInventory("HexenClassMode",1,"FireMage")
      FireCleric:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,2)
        TNT1 A 0 A_JumpIfInventory("Clip",1,1)
        goto NoAmmoSwitch
        TNT1 A 0 A_AlertMonsters
        TNT1 A 0 A_JumpIfCloser(128,"FireClericMelee")
        goto FireClericRanged

      FireClericMelee:
        TNT1 A 0 A_GiveInventory("SamsaraHexenSerpentStaffMeleeAttackHandler")
        TNT1 A 0 A_JumpIfInventory("SamsaraHexenSerpentStaffDrained",1,1)
        goto FireClericRanged
        CSSF K 8 Bright Offset(0,36)
        goto FireClericFinish

      FireClericRanged:
        CSSF A 1 Bright Offset(0,45)
        CSSF J 3 Bright Offset(0,50) A_GiveInventory("SamsaraHexenSerpentStaffRangedAttackHandler")
        CSSF J 2 Offset(0,45)
        CSSF A 2 Offset(0,40)
        CSSF A 2 Offset(0,36)
        goto FireClericFinish

      FireClericFinish:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,2)
        TNT1 A 0 A_JumpIfInventory("Clip",1,1)
        goto NoAmmoSwitch
        TNT1 A 0 A_ReFire
        goto ReadyLoop

      // Daedolon (Blight Shock)
      ReadyLoopMage:
        H110 A 1 A_WeaponReady
        goto ReadyLoop

      DeselectLoopMage:
        H110 A 1 A_Lower
        goto DeselectLoop

      SelectMage:
        H110 A 1 A_Raise
        goto Select

      FireMage:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,2)
        TNT1 A 0 A_JumpIfInventory("Clip",5,1)
        goto NoAmmoSwitch
        H110 A 1 A_AlertMonsters
        H110 B 4 Bright A_GiveInventory("SamsaraHexenBlightShockAttackHandler")
        H110 CDEFGH 3 Bright
        H110 A 6
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,2)
        TNT1 A 0 A_JumpIfInventory("Clip",5,1)
        goto NoAmmoSwitch
        TNT1 A 0 A_ReFire
        goto ReadyLoop

      // Baratus (Jotunn's Flail)
      ReadyLoopFighter:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"ReadyLoopFighterAmmo")
        TNT1 A 0 A_JumpIfInventory("Clip",1,"ReadyLoopFighterAmmo")
      ReadyLoopFighterNoAmmo:
        H122 A 1 A_WeaponReady
        goto ReadyLoop

      ReadyLoopFighterAmmo:
        H122 H 1 Bright A_WeaponReady
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,2)
        TNT1 A 0 A_JumpIfInventory("Clip",1,1)
        goto ReadyLoop
        H122 H 1 Bright A_WeaponReady
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,2)
        TNT1 A 0 A_JumpIfInventory("Clip",1,1)
        goto ReadyLoop
        H122 H 1 Bright A_WeaponReady
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,2)
        TNT1 A 0 A_JumpIfInventory("Clip",1,1)
        goto ReadyLoop
        H122 I 1 Bright A_WeaponReady
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,2)
        TNT1 A 0 A_JumpIfInventory("Clip",1,1)
        goto ReadyLoop
        H122 I 1 Bright A_WeaponReady
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,2)
        TNT1 A 0 A_JumpIfInventory("Clip",1,1)
        goto ReadyLoop
        H122 I 1 Bright A_WeaponReady
        goto ReadyLoop

      DeselectLoopFighter:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"DeselectLoopFighterAmmo")
        TNT1 A 0 A_JumpIfInventory("Clip",1,"DeselectLoopFighterAmmo")
      DeselectLoopFighterNoAmmo:
        H122 A 1 A_Lower
        goto DeselectLoop

      DeselectLoopFighterAmmo:
        H122 H 1 Bright A_Lower
        goto DeselectLoop

      SelectFighter:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"SelectFighterAmmo")
        TNT1 A 0 A_JumpIfInventory("Clip",1,"SelectFighterAmmo")
      SelectFighterNoAmmo:
        H122 A 1 A_Raise
        goto Select

      SelectFighterAmmo:
        H122 H 1 Bright A_Raise
        goto Select

      FireFighter:
        TNT1 A 0 A_TakeInventory("SamsaraHexenJotunnsFlailMeleePuffSpawned")
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"FireFighterAmmo")
        TNT1 A 0 A_JumpIfInventory("Clip",1,"FireFighterAmmo")
      FireFighterNoAmmo:
        H122 B 4
        H122 C 4 A_PlaySound("FighterHammerMiss",CHAN_WEAPON)
        goto FireFighterContinue1

      FireFighterAmmo:
        H122 J 4 Bright
        H122 K 4 Bright A_PlaySound("FighterHammerMiss",CHAN_WEAPON)
        goto FireFighterContinue1

      FireFighterContinue1:
        TNT1 A 0 A_GiveInventory("SamsaraHexenJotunnsFlailMeleeAttackHandler1")
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"FireFighterContinue1Ammo")
        TNT1 A 0 A_JumpIfInventory("Clip",1,"FireFighterContinue1Ammo")
      FireFighterContinue1NoAmmo:
        H122 D 4
        goto FireFighterContinue2

      FireFighterContinue1Ammo:
        H122 L 4 Bright
        goto FireFighterContinue2

      FireFighterContinue2:
        TNT1 A 0 A_GiveInventory("SamsaraHexenJotunnsFlailMeleeAttackHandler2")
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"FireFighterContinue2Ammo")
        TNT1 A 0 A_JumpIfInventory("Clip",1,"FireFighterContinue2Ammo")
      FireFighterContinue2NoAmmo:
        H122 E 4
        goto FireFighterContinue3

      FireFighterContinue2Ammo:
        H122 M 4 Bright
        goto FireFighterContinue3

      FireFighterContinue3:
        TNT1 A 0 A_JumpIfCloser(128,"FireFighterContinue3MeleeOnly") // hack for non-bleeding actors
        TNT1 A 0 A_GiveInventory("SamsaraHexenJotunnsFlailMeleeAttackHandler3")
        TNT1 A 0 A_GiveInventory("SamsaraHexenJotunnsFlailRangedAttackHandler")
        goto FireFighterFinish

      FireFighterContinue3MeleeOnly:
        TNT1 A 0 A_GiveInventory("SamsaraHexenJotunnsFlailMeleeAttackHandler3")
        goto FireFighterFinish

      FireFighterFinish:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasInfiniteAmmo",1,"FireFighterFinishAmmo")
        TNT1 A 0 A_JumpIfInventory("Clip",1,"FireFighterFinishAmmo")
      FireFighterFinishNoAmmo:
        H122 FG 4
        goto ReadyLoop

      FireFighterFinishAmmo:
        H122 NO 4 Bright
        goto ReadyLoop

      // "No ammo" switch
      NoAmmoSwitch:
        TNT1 A 0 A_ClearReFire
        TNT1 A 0 ACS_NamedExecuteWithResult("Hexen_SwitchPriority")
        goto Deselect
    }
}

