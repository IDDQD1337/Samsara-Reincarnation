actor SamsaraHexenCStaffPuff : CStaffPuff
{
    +HITTRACER
    +PUFFGETSOWNER
    States
    {
      Spawn:
      Crash:
        goto Super::Spawn

      Melee:
        TNT1 A 0 A_TakeInventory("Clip",1,0,AAPTR_TARGET)
      MeleeDrain:
        TNT1 A 0 A_JumpIf(CallACS("SamsaraHexenSerpentStaffMeleeHealCheck") == 1, 1)
        goto Super::Spawn
        TNT1 A 0 A_GiveInventory("SamsaraHexenSerpentStaffDrained",1,AAPTR_TARGET)
        TNT1 A 0 A_JumpIf(CallACS("SamsaraDecorate", 22), "MeleeDrainInfinite")
        TNT1 A 0 A_GiveInventory("FiniteHealth",random(2,4),AAPTR_TARGET)
        TNT1 A 0 A_GiveInventory("FiniteHealth200",1,AAPTR_TARGET)
        goto Super::Spawn

      MeleeDrainInfinite:
        TNT1 A 0 A_GiveInventory("InfiniteHealth",random(3,5),AAPTR_TARGET)
        goto Super::Spawn
    }
}

