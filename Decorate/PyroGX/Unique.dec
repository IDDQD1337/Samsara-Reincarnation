Actor DescentSmartMineBomblet : DescentMissile 
{
	ExplosionDamage 30
	ExplosionRadius 50
	Speed 8
	+SEEKERMISSILE
	-SCREENSEEKER
	States
	{
		Spawn:
			DS17 A 0
			DS17 A 0 A_TransferPointer(AAPTR_Target,AAPTR_Default,AAPTR_FriendPlayer,AAPTR_Target)
			DS17 A 0 A_CopyFriendliness(AAPTR_Target)
			DS17 A 0 A_ReArrangePointers(AAPTR_Target,AAPTR_Master,AAPTR_NULL)
		SpawnLoop:
			DS17 ABCDEF 1 Bright A_SeekerMissile(8,8,SMF_LOOK|SMF_PRECISE)
			Loop
		Death:
			//DS00 A 0 A_SetScale(1.0, 1.0)
			DS00 A 0 A_Explode(-1,-1,0,1)
			DS00 A 0 A_PlaySound("Descent/Laser/Explode",CHAN_5)
			DS18 ABCDEFGH 2 Bright
			Stop
	}
}
