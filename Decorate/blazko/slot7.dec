actor "Spear of Destiny": InstantSwitchWeapon
{
    Weapon.SelectionOrder 2900
    Inventory.PickUpSound "wolfen/spearget"
    Weapon.AmmoUse 40
    Weapon.AmmoGive 40
    Weapon.AmmoType "Cell"
    +DONTBOB
    +INVENTORY.UNDROPPABLE
    +WEAPON.NOAUTOFIRE
	Inventory.RestrictedTo "WolfenPlayer"
    Obituary "$SAMSARA_WOLFEN_OB_SLOT7" 
    Inventory.PickupMessage "You got the Spear of Destiny!"

    States
    {
      Spawn:
		TNT1 A 0
        TNT1 A 0 A_JumpIfInventory("WolfenLostMode",1,2)
	    WSPR E 4
        Loop
		WSPR N 4
        Loop

      Ready:
        TNT1 A 0 A_JumpIfInventory("WolfenLostMode",1,2)
		WSPR A 1 A_WeaponReady
        loop
		WSPR J 1 A_WeaponReady
        loop

      Fire:
        TNT1 A 0 A_JumpIfInventory("WolfenLostMode",1,"FireLost")
		TNT1 A 0 A_JumpIfInventory("SPModeOn", 1, "SPFire")
        TNT1 A 0 A_JumpIfInventory("CoopModeOn", 1, "CoopFire")
        WSPR B 20 A_PlayWeaponSound("wolfen/spearready")
        WSPR C 15 BRIGHT
        WSPR C 0 A_PlayWeaponSound("wolfen/spearfire")
        WSPR D 15 BRIGHT A_FireCustomMissile("SpearBoltDM", 0, 1, 0, 0)
        WSPR C 15 BRIGHT
        WSPR B 15
        WSPR A 5 A_Refire
        goto Ready
	  
	  FireLost:
		TNT1 A 0 A_JumpIfInventory("SPModeOn", 1, "SPFireLost")
        TNT1 A 0 A_JumpIfInventory("CoopModeOn", 1, "CoopFireLost")
        WSPR K 20 A_PlayWeaponSound("wolfen/spearready")
        WSPR L 15 BRIGHT
        WSPR L 0 A_PlayWeaponSound("wolfen/spearfire")
        WSPR M 15 BRIGHT A_FireCustomMissile("SpearBoltDM", 0, 1, 0, 0)
        WSPR L 15 BRIGHT
        WSPR K 15
        WSPR J 5 A_Refire
        goto Ready

      SPFire:
        WSPR B 20 A_PlayWeaponSound("wolfen/spearready")
        WSPR C 15 BRIGHT
        WSPR C 0 A_PlayWeaponSound("wolfen/spearfire")
        WSPR D 15 BRIGHT A_FireCustomMissile("SpearBolt", 0, 1, 0, 0)
        WSPR C 15 BRIGHT
        WSPR B 15
        WSPR A 5 A_Refire
        goto Ready
		
	  SPFireLost:
        WSPR K 20 A_PlayWeaponSound("wolfen/spearready")
        WSPR L 15 BRIGHT
        WSPR L 0 A_PlayWeaponSound("wolfen/spearfire")
        WSPR M 15 BRIGHT A_FireCustomMissile("SpearBolt", 0, 1, 0, 0)
        WSPR L 15 BRIGHT
        WSPR K 15
        WSPR J 5 A_Refire
        goto Ready

      CoopFire:
        WSPR B 20 A_PlayWeaponSound("wolfen/spearready")
        WSPR C 15 BRIGHT
        WSPR C 0 A_PlayWeaponSound("wolfen/spearfire")
        WSPR D 15 BRIGHT A_FireCustomMissile("SpearBolt2", 0, 1, 0, 0)
        WSPR C 15 BRIGHT
        WSPR B 15
        WSPR A 5 A_Refire
        goto Ready
		
	  CoopFireLost:
        WSPR K 20 A_PlayWeaponSound("wolfen/spearready")
        WSPR L 15 BRIGHT
        WSPR L 0 A_PlayWeaponSound("wolfen/spearfire")
        WSPR M 15 BRIGHT A_FireCustomMissile("SpearBolt2", 0, 1, 0, 0)
        WSPR L 15 BRIGHT
        WSPR K 15
        WSPR J 5 A_Refire
        goto Ready
    }
}

actor SpearBolt
{
    Speed 15
    Height 2
    Radius 4
    Mass 9
    Damage 55
    SeeSound ""
    DeathSound "wolfen/spearexplode1"
    Obituary "$SAMSARA_WOLFEN_OB_SLOT7" 
    PROJECTILE
    +DONTREFLECT
    DamageType "BJSpear"
    Scale 0.80
    RENDERSTYLE ADD
    States
    {
      Spawn:
        SPB1 ABABABAB 3 BRIGHT A_SpawnItemEx("SpearShotTrail", 0, 0, 0)
        goto Death

      Death:
        SPX1 A 0 A_Stop
        SPX1 AAAAAAAAAAAAAAAAAAAA 0 A_CustomMissile("SpearShotMini", 0, 0, random(-180, 180), 2, random(-25, 25))
        SPX1 AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA 0 A_CustomMissile("SpearShotMini2", 0, 0, random(-180, 180), 2, random(-25, 25))
        SPX1 A 0 A_Scream
        SPX1 A 4 BRIGHT A_Explode(120, 240, 0)
        SPX1 BCDEF 4 BRIGHT
        Stop
    }
}

