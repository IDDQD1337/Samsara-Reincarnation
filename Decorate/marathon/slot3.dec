actor FusionShot
{
    Projectile
    Radius 12
    Height 16
    Speed 25
    Damage (random(40,50))
    DamageType "MarathonFusion"
    ReactionTime 1
    Scale 0.35
    DeathSound "marathon/fusion/hit"
    Decal "DoomImpScorch"
    Obituary "$SAMSARA_MARATHON_OB_SLOT3_1"
    +BLOODLESSIMPACT
    +DONTREFLECT
    +FOILINVUL
    +NOEXTREMEDEATH
    +PIERCEARMOR
    States
    {
      Spawn:
        MA00 AABBCC 1 Bright NoDelay A_JumpIf(waterlevel >= 2, "FuckWater")
        loop

      FuckWater:
        MA00 A 1 Bright A_Countdown
        goto Spawn

      Death:
        MA01 ABCD 2 Bright
        stop
    }
}

