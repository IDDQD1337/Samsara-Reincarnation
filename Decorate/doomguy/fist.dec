actor SamsaraDoomguyStrFistAttackHandler : StrTrigger
{
    States
    {
      Pickup:
        TNT1 A 0 A_JumpIfInventory("PowerStrength",1,"PickupBerserk")
      // Normal
      PickupNormal:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasSpread",1,"PickupNormalSpread") // A_CustomPunch doesn't support spread, multiply damage by 3 to compensate
        TNT1 A 0 A_CustomPunch(random(1,10)*2,true,0,"SamsaraDoomguyStrBulletPuff")
        stop

      PickupNormalSpread:
        TNT1 A 0 A_CustomPunch((random(1,10)*2)*3,true,0,"SamsaraDoomguyStrBulletPuff")
        stop

      // Berserk
      PickupBerserk:
        TNT1 A 0 A_JumpIfInventory("SamsaraHasSpread",1,"PickupBerserkSpread")
        TNT1 A 0 A_CustomPunch((random(1,10)*2)*10,true,0,"SamsaraDoomguyStrBulletPuff")
        stop

      PickupBerserkSpread:
        TNT1 A 0 A_CustomPunch(((random(1,10)*2)*10)*3,true,0,"SamsaraDoomguyStrBulletPuff")
        stop
    }
}

